{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ESNext", // Specify ECMAScript target version
    "module": "ESNext", // Specify module code generation
    "jsx": "react-jsx", // Support JSX in React
    "strict": true, // Enable all strict type-checking options
    "moduleResolution": "node", // Resolve modules using Node.js style
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "allowJs": true, // Allow JavaScript files to be compiled
    "checkJs": false, // Disable type checking on JavaScript files
    "noEmit": true, // Do not emit outputs
    "baseUrl": "./src", // Simplify imports - relative paths start here - Base directory for module resolution
    "paths": {
      "components/*": ["components/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "setup-tests.ts"
  ] // Exclude node_modules and dist directories
}
